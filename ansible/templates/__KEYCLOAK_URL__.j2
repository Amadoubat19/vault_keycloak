server {

        server_name __KEYCLOAK_URL_;
        location / {
                proxy_pass http://127.0.0.1:8080;
        }

        location ^~ /.well-known/acme-challenge/ {
                allow all;
                root /var/lib/letsencrypt/;
                default_type "text/plain";
                try_files $uri =404;
        }

        # SSL configuration
